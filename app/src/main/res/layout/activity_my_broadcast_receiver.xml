<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.johnhao.demo.activity.MyBroadcastReceiverActivity">

    <Button
        android:id="@+id/btn_send_mybroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send 标准广播"
        android:textColor="#ee11ff"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_send_mybroadcast_ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send 有序广播"
        android:textColor="#82D900"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>
